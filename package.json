{
  "name": "my-vue-app",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "yarn lint-eslint && yarn lint-stylelint",
    "lint-eslint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint-stylelint": "stylelint --config .stylelintrc.cjs src/**/*.{css,scss}",
    "commit": "cz",
    "commit:amend": "git commit --amend --no-edit",
    "push:force": "git push origin --force",
    "prepare": "node ./scripts/prepare.cjs"
  },
  "lint-staged": {
    "*.{ts,tsx,js}": [
      "eslint --config .eslintrc.cjs"
    ],
    "*.{css,scss}": [
      "stylelint --config .stylelintrc.cjs"
    ],
    "*.{ts,tsx,js,json,html,yml,css,scss,md}": [
      "prettier --write ."
    ]
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.2.0",
    "@commitlint/config-conventional": "^18.1.0",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-legacy": "^4.1.1",
    "@vitejs/plugin-react": "^4.0.3",
    "commitizen": "^4.3.0",
    "eslint": "^8.45.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.2",
    "meow": "^9.0.0",
    "postcss-scss": "^4.0.9",
    "prettier": "^3.0.3",
    "sass": "^1.69.5",
    "stylelint": "^14.0.0",
    "stylelint-config-standard": "^28.0.0",
    "terser": "^5.22.0",
    "typescript": "^5.0.2",
    "typescript-plugin-css-modules": "^5.0.2",
    "vite": "^4.4.5",
    "vite-plugin-checker": "^0.6.2"
  }
}
